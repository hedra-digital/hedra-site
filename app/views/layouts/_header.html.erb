<div class="navbar">
  <div class="navbar-inner">

    <%= link_to(image_tag(publisher_logo_img, class: 'logo-selo'), root_path) %>

    <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <div class="nav-collapse collapse navbar-responsive-collapse">
      <nav id="main-nav" role="navigation">
        <ul class="nav">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Cat√°logo<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% @category_list.each do |category| %>
                <%= content_tag :li, link_to(category.name, category_path(category)) %>
              <% end %>
            </ul>
          </li>
          <li><%= link_to('blog', blog_path) if blog_count > 0 %></li>
          <li><%= link_to current_publisher.about_label, about_path %></li>
          <li><%= link_to "Autores", authors_path %></li>
          <% if current_publisher.link_url and current_publisher.link_name%>
            <li><%= link_to current_publisher.link_name, "http://#{current_publisher.link_url}" %></li>
          <% end %>
          <!-- <li><%= link_to 'Contato', contact_path %></li> -->
        </ul>
      </nav>

      <form class="navbar-search pull-left" action="/livros/busca" method="get">
           <input type="text" class="search-query" name="term">
      </form>

      <div class="navadd">
        <div class="cart">
          <% if session[:cart].size > 0 %>
            <%= link_to(image_tag('cart_full.png', style: "width: 25px"), '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown') %>
            <%= content_tag :span, session[:cart].size, :class => 'cart-count' %>
            <div class="dropdown-menu">
              <ul>
              <% session[:cart].each do |item| %>
                <li><%= book_in_cart_for(Book.find(item[:book_id]), item[:book_type]) %></li>
              <% end %>
              </ul>
              <%= link_to 'Ver carrinho', cart_path, class: 'btn btn-primary' %>
            </div>
          <% else %>
            <%= image_tag('cart.png') %>
          <% end %>
        </div>
        <% if current_user and current_user.name %>
          <div class="user-name"> 
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Oi,  <%= current_user.name%></a>
            <div class="dropdown-menu">
              <ul>
                <li><%= link_to "Pedidos", :controller => "orders", :action => "index"%></li>
                <li><%= link_to "Sair", destroy_user_session_path, :method => :delete %></li>
              </ul>
            </div>
          </div>
        <% else %>  
          <div class="user-name">
            <%= link_to "Login", new_session_path(:user), class: "dropdown-toggle" %>
          </div>
        <% end %>  
      </div>
    </div>
  </div>
</div>
